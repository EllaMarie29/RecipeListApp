<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFED99"
    tools:context=".Menu">
    <RelativeLayout
        android:id="@+id/header_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#EBA83A">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/icon"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_toRightOf="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Name of recipe"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rel_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/r1_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/r1"
            android:layout_toRightOf="@+id/r1_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Breakfast"
            android:textStyle="bold"
            android:padding="10dp"
            android:fontFamily="serif-monospace"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/r2_img"
            android:layout_below="@id/r1_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/r2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/r1_img"
            android:layout_toRightOf="@+id/r2_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Breakfast"
            android:textStyle="bold"
            android:padding="10dp"
            android:fontFamily="serif-monospace"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/r3_img"
            android:layout_below="@id/r2_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/r3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/r2_img"
            android:layout_toRightOf="@+id/r2_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Breakfast"
            android:textStyle="bold"
            android:padding="10dp"
            android:fontFamily="serif-monospace"
            android:textSize="20sp"/>






    </RelativeLayout>

</RelativeLayout>